{
    "manifest_version":3,
    "name": "Screen Recorder",
    "description":"it records the user's screen",
    "author": "Mofique",
    "icons": {
        "128":"./images/icon-128x128.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup" :"popup.html",
        "default_icons": {
            "16": "./images/icon-16x16.png",
            "32": "./images/icon-32x32.png",
            "128": "./images/icon-128x128.png"
        }
    },

    "host_permissions" : [
        "http://*/",
        "https://*/*"
    ],
    "permissions":[
        
    ],
    "version":"1.0.0"
}